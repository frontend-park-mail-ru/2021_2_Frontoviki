<div class="new-advert">
  <div class="new-advert__title">
    <h3 class="title">{{newAdvert}}</h3>
  </div>
  <div class="text-input new-advert__name">
    <label class="text-input__label">{{title}}</label>
    <input class="text-input__input" type="text" required />
    <span class="text-input__description">{{titleHint}}</span>
  </div>
  <div class="text-input new-advert__category">
    <label class="text-input__label">{{category}}</label>
    <select class="category__select" id="selCategory"></select>
  </div>
  <div class="textarea new-advert__description">
    <label class="textarea__label">{{description}}</label>
    <textarea class="textarea__textarea" rows="10" maxlength="500"></textarea>
  </div>

  <div class="new-advert__state single-choice">
    <p class="single-choice__capture">{{condition}}</p>
    <div class="single-choice__radio-button-block">
      <label class="single-choice__label" for="radio-new">
        <input
          class="single-choice__radio-button"
          name="radio"
          id="radio-new"
          type="radio"
        />
        <div class="single-choice__fake-radio-button"></div>
        <p class="single-choice__variant">{{conditionAdNew}}</p>
      </label>
    </div>
    <div class="single-choice__radio-button-block">
      <label class="single-choice__label" for="radio-old">
        <input
          checked
          class="single-choice__radio-button"
          name="radio"
          id="radio-old"
          type="radio"
        />
        <div class="single-choice__fake-radio-button"></div>
        <p class="single-choice__variant">{{conditionAdUsed}}</p>
      </label>
    </div>
  </div>

  <div class="text-input new-advert__price">
    <label class="text-input__label">{{price}}</label>
    <input class="text-input__input" type="number" />
    <span class="text-input__description">{{priceHint}}</span>
  </div>

  <div class="new-advert__photos">
    <h3 class="new-advert-photos__title">{{uploadImages}}</h3>
    <div class="image-uploader" id="image-uploader">
      <label class="image-uploader__default" for="image_upload">
        <input
          class="image-uploader__default__file"
          type="file"
          id="image_upload"
          multiple accept="image/*"
        />
        <div class="image-uploader__default__icon-container">
          <svg
            class="image-uploader__default__icon"
            width="20"
            height="19"
            viewBox="0 0 20 19"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M2.828 18L2.808 18.02L2.787 18H0.992C0.728813 17.9997 0.476497 17.895 0.290489 17.7088C0.104482 17.5226 -1.33455e-07 17.2702 0 17.007V0.993C0.00183004 0.730378 0.1069 0.479017 0.292513 0.293218C0.478126 0.107418 0.72938 0.00209465 0.992 0H19.008C19.556 0 20 0.445 20 0.993V17.007C19.9982 17.2696 19.8931 17.521 19.7075 17.7068C19.5219 17.8926 19.2706 17.9979 19.008 18H2.828ZM18 12V2H2V16L12 6L18 12ZM18 14.828L12 8.828L4.828 16H18V14.828ZM6 8C5.46957 8 4.96086 7.78929 4.58579 7.41421C4.21071 7.03914 4 6.53043 4 6C4 5.46957 4.21071 4.96086 4.58579 4.58579C4.96086 4.21071 5.46957 4 6 4C6.53043 4 7.03914 4.21071 7.41421 4.58579C7.78929 4.96086 8 5.46957 8 6C8 6.53043 7.78929 7.03914 7.41421 7.41421C7.03914 7.78929 6.53043 8 6 8Z"
            ></path>
          </svg>
        </div>
        <p class="image-uploader__default__capture">{{add}}</p>
      </label>
    </div>
  </div>

  <div class="text-input new-advert__location">
    <label class="text-input__label">{{address}}</label>
    <input class="text-input__input" type="text" placeholder="{{mapHint}}"/>
    <span class="text-input__description">{{addressHint}}</span>
  </div>

  <div id="YMapsID" class="new-advert__map"></div>
  <div class="button-container">
    <button class="button" id="newAdForm">{{submit}}</button>
  </div>
</div>